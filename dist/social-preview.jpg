<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="630" viewBox="0 0 1200 630">
  <!-- Dark background with gradient -->
  <defs>
    <radialGradient id="bgGlow" cx="50%" cy="50%" r="70%">
      <stop offset="0%" style="stop-color:#300;stop-opacity:0.8"/>
      <stop offset="100%" style="stop-color:#000;stop-opacity:1"/>
    </radialGradient>
    
    <!-- Text effects -->
    <filter id="textGlow">
      <feGaussianBlur stdDeviation="4" result="blur"/>
      <feComposite in="SourceGraphic" in2="blur" operator="over"/>
    </filter>
  </defs>

  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGlow)"/>

  <!-- Decorative elements -->
  <g transform="translate(600, 315)" opacity="0.2">
    <circle r="250" fill="none" stroke="#500" stroke-width="2"/>
    <circle r="240" fill="none" stroke="#400" stroke-width="2"/>
    <circle r="230" fill="none" stroke="#300" stroke-width="2"/>
  </g>

  <!-- Logo -->
  <g transform="translate(300, 165) scale(0.8)">
    <use href="#logo"/>
  </g>

  <!-- Title -->
  <g transform="translate(600, 315)" filter="url(#textGlow)">
    <text x="0" y="0" font-family="monospace" font-size="72" fill="#600" text-anchor="middle">
      ECHO DELIRIUM
    </text>
    <text x="0" y="50" font-family="monospace" font-size="24" fill="#400" text-anchor="middle">
      Transform reality into nightmarish soundscapes
    </text>
  </g>

  <!-- Runic decorations -->
  <g transform="translate(600, 315)" fill="#600" opacity="0.3">
    <use href="#runes"/>
  </g>
</svg>